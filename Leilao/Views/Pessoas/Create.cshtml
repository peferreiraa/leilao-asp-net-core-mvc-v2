@model Leilao.Models.ViewModels.PessoaFormViewModel

@{
    ViewData["Title"] = "Cadastrar";
}

<h2>@ViewData["Title"]</h2>

<h4>Lance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div class="form-group">
                <label asp-for="Pessoa.Nome" class="control-label"></label>
                <input asp-for="Pessoa.Nome" class="form-control" />
                <span asp-validation-for="Pessoa.Nome" class="text-danger"></span>
            </div>

            

            <div class="form-group">
                <label asp-for="Pessoa.ProdutoId" class="control-label"></label>
                <select asp-for="Pessoa.ProdutoId" asp-items="@(new SelectList(Model.Produtos,"Id",
                "Nome"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="Pessoa.Lance" class="control-label"></label>
                <input asp-for="Pessoa.Lance" class="form-control" />
                <span asp-validation-for="Pessoa.Lance" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
